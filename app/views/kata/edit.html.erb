        </div>
        <div class="panel">        
          <%= render :partial => 'filename_list' %>
        </div>
        <div class="panel">        
          <%= render :partial => 'file_new_rename_delete' %>
        </div>        
        <div class="panel">
          <%= render :partial => 'misc_buttons' %>          
        </div>
      </td>
      <td>
        <%= render :partial => 'editor' %>
      </td>
    </tr>
    <tr class="valign-top">
      <td>
        <%= render :partial => 'shared/tip_window' %>
      </td>
      <td>
        <%= render :partial => 'traffic_lights' %>
      </td>
    </tr>
  </table>
</div>  
<% end %>
