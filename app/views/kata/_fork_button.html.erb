
<script type="text/javascript"><!--

$(document).ready(function() {

  $('#fork-button').click(function() {
    var title = $(this).data('title');
    var cancel = $(this).data('cancel');
    var id = "<%= @kata.id %>";
    var avatarName = "<%= @avatar.name %>";
    var maxTag = parseInt($('.traffic-light-count').text());
    var tag = maxTag;
    cd.dialog_fork(title, cancel, id, avatarName, tag, maxTag);
  });

});

//--></script>

<button type="button"
        id="fork-button"
        class="tipped"
        data-title="<%= t('views.buttons.fork') %>"
        data-cancel="<%= t('views.buttons.cancel') %>">
  <%= t('views.buttons.fork') %>
  <div class="tooltip">
    forks a new dojo<br>from any traffic-light
  </div>
</button>
