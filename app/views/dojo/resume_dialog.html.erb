
<div align="center">
  <div class="medium"><%= t("views.labels.click_to_resume") %></div>
  <table cellspacing="0" cellpadding="0">
    <% index = 0 %>
    <% size = 60 %>
    <% (1..4).each do |_| %>
    <tr>
      <% (1..4).each do |_| %>
      <td class="panel">
        <% avatar_name = @all_avatar_names[index] %>
        <% if @live_avatar_names.include?(avatar_name) %>
          <img onclick='return cd.resume("<%= @kata.id %>","<%= avatar_name %>");'
               src="/images/avatars/<%= avatar_name %>.jpg"
               title="resume <%= avatar_name %>"
               width="<%= size %>"
               height="<%= size %>" />          
          <div align="left">
            <b><%= translate_avatar avatar_name %></b>
          </div>
        <% else %>
          <img src="/images/avatars/bw/<%= avatar_name %>.jpg"
               width="<%= size %>"
               height="<%= size %>"/>
          <div align="left" style="color:Gray;">
            <b><%= translate_avatar avatar_name %></b>
          </div>
        <% end %>      
        <% index += 1 %>
      </td>
      <% end %>     
    </tr>
    <% end %>
  </table>
</div>

