
<script language="JavaScript"><!--
function select_avatar(name)
{
  $("avatar").value = name;
  document.chooseAvatar.submit();
}
//--></script>

<form name="chooseAvatar" action="/kata/start">

<noscript>
 &nbsp;
 <h2><b>You must enable JavaScript.</b></h2>
 &nbsp;
</noscript>

<table cellspacing="4">

  <tr>  
    <td class="dojo panel box">
      Enter the <i>kata-id</i>
      <input name="kata_id" 
             id="kata_id" 
             type="text" 
             size="5" 
             value="<%=@kata_id-%>">
      and click your avatar.
    </td>  
  </tr>

  <tr>
    <td class="dojo panel box">

      <input readonly 
             type="hidden"
             name="avatar" 
             id="avatar" 
             type="text" 
             size="15" 
             value="">

      <% chunks = chunk_array(@avatars.sort, 4) -%>
      <table cellpadding="7">
      <% chunks.each do |chunk| -%>
        <tr>
        <% chunk.each do |avatar| -%>
           <td>
             <img alt="<%=avatar-%>" 
                  class="avatar box" 
                  src="/images/avatars/<%=avatar.downcase-%>.jpg"
                  title="<%=avatar.humanize-%>"
                  onClick='select_avatar("<%=avatar.downcase-%>");' />
             <img alt="<%=avatar-%>" 
                  class="avatar box" 
                  src="/images/avatars/<%=avatar.downcase-%>.jpg"
                  title="<%=avatar.humanize-%>"
                  onClick='select_avatar("<%=avatar.downcase-%>");' />
           </td>
        <% end -%>
        </tr>
      <% end -%>
      </table>    
    </td>
  </tr>

</table>

</form>


